{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Trading App (Go)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "env": {},
            "args": []
        },
        {
            "name": "Attach to Process",
            "type": "go",
            "request": "attach",
            "mode": "local",
            "processId": 0
        },
        {
            "name": "Debug Test",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${fileDirname}",
            "args": []
        },
        {
            "name": "Launch Full Stack (Go+Svelte)",
            "type": "node",
            "request": "launch",
            "preLaunchTask": "Start Svelte Frontend",
            "dependsOn": [
                "Launch Trading App (Go)"
            ]
        },
        {
            "name": "Python: Test Mr Strategy",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/python_strategies/test_mr_strategy.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "subProcess": true
        },
        {
            "name": "Python: MR Strategy Server",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/python_strategies/main.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "subProcess": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/python_strategies"
            }
        },
        {
            "name": "Attach to Python",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/python_strategies",
                    "remoteRoot": "."
                }
            ]
        }
    ],
    "compounds": [
        {
            "name": "Launch Full Stack Application",
            "configurations": [
                "Launch Trading App (Go)",
                "Launch Full Stack (Go+Svelte)"
            ],
            "stopAll": true
        }
    ]
}